		<section>
			<h1 class="desc-h1">Submit an enquiry</h1>

			<div class="form-wrapper">
				<div class="enquiry-form">
					<form id="detail" action="mailto:imanamran@gmail.com" method="post" enctype="text/plain">
						<fieldset>
							<table>
								<tr>
									<td>First name</td>
									<td>Last name</td>
								</tr>

								<tr>
									<td><input type="text" name="First name" placeholder="First name" size="20" required="required" id="name1" maxlength="25" pattern="[a-zA-Z]+" title="Alphabetical characters only"></input></td>
									<td><input type="text" name="Last name" placeholder="Last name" size="20" required="required" id="name2" maxlength="25" pattern="[a-zA-Z]+" title="Alphabetical characters only"></input></td>
									
								</tr>

								<tr>
									<td>E-mail address</td>
									<td></td>
								</tr>

								<tr>
									<td colspan ="2"><input type="text" name="E-mail address" placeholder="Last name" size="40" required="required" id="name3" maxlength="25"></input></td>
								</tr>



								<tr>
									<td>Address</td>
									<td></td>
								</tr>

								<tr>
									<td class="address">Street address</td>
									<td><input type="text" name="Street address" placeholder="Street address" size="40" required="required" id="name4" maxlength="40"></input></td>
								</tr>

								<tr>
									<td class="address">City/town</td>
									<td><input type="text" name="City/town" placeholder="City/town" size="40" required="required" id="name5" maxlength="20"></input></td>
								</tr>

								<tr>
									<td class="address">State</td>
									<td>
										<select name="State" class="custom-select" style="width:200px;">
											<optgroup label="States">
												<option value="johor">Johor</option>
												<option value="kedah">Kedah</option>
												<option value="kelantan">Kelantan</option>
												<option value="malacca">Malacca</option>
												<option value="negeri_sembilan">Negeri Sembilan</option>
												<option value="pahang">Pahang</option>
												<option value="penang">Penang</option>
												<option value="perak">Perak</option>
												<option value="perlis">Perlis</option>
												<option value="sabah">Sabah</option>
												<option value="sarawak">Sarawak</option>
												<option value="selangor">Selangor</option>
												<option value="terengganu">Terengganu</option>
												<option value="penang">Penang</option>
												<option value="perak">Perak</option>	
											</optgroup>
											
											<optgroup label="Federal Territories">
												<option value="kuala_lumpur">Kuala Lumpur</option>
												<option value="labuan">Labuan</option>
												<option value="putrajaya">Putrajaya</option>
											</optgroup>
										</select>
								
									</td>
								</tr>

								<tr>
									<td class="address">Postcode</td>
									<td><input type="text" name="Postcode" placeholder="Postcode" size="40" required="required" id="name6" maxlength="5" pattern="[0-9]+" title="Numbers only"></input></td>
								</tr>

								<tr>
									<td>Phone number</td>
									<td><input type="text" name="Phone number" placeholder="Phone number" size="40" required="required" id="name7" maxlength="10" pattern="[0-9]+" title="Numbers only"></input></td>
								</tr>

								<tr>
									<td>Service</td>
									<td>
										<select name="Service" class="custom-select" style="width:200px;">
											<option value="Food Delivery">Food Delivery</option>
											<option value="Recipes">Recipes</option>
											<option value="Booking">Booking</option>
											<option value="Jobs">Jobs</option>
										</select>
									</td>
								</tr>

								<tr>
									<td>Comment</td>
									<td><textarea name="comment" placeholder="Comment" rows="3" cols="40"></textarea></td>
								</tr>
							</table>
						</fieldset>
						<input type="submit" value="Submit"></input>
					</form>
